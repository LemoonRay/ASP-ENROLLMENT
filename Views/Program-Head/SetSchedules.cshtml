@{
    ViewBag.Title = "Schedule Management";
    Layout = "~/Views/Shared/_ProgramHeadHeader.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f0f2f5;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        /* Hide scrollbar */
        &::-webkit-scrollbar {
            display: none;
        }

        .content-section {
            padding: 30px;
            flex-grow: 1;
        }

        .schedule-container {
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
            padding: 20px;
            margin-bottom: 30px;
        }

        .filter-section {
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f8f9fa;
            border-radius: 5px;
        }

        .schedule-table {
            width: 100%;
            border-collapse: collapse;
        }

        .schedule-table th,
        .schedule-table td {
            border: 1px solid #dee2e6;
            padding: 8px;
            text-align: center;
        }

        .schedule-table th {
            background-color: #007bff;
            color: white;
        }

        .time-column {
            background-color: #f8f9fa;
            font-weight: bold;
        }

        .schedule-slot {
            min-height: 80px;
            position: relative;
        }

        .schedule-card {
            background-color: #e7f5ff;
            border-left: 4px solid #228be6;
            border-radius: 4px;
            padding: 5px;
            margin: 2px;
            font-size: 0.9em;
        }

        .schedule-card .course-code {
            font-weight: bold;
        }

        .schedule-card .instructor {
            font-size: 0.8em;
            color: #495057;
        }

        .empty-slot {
            color: #adb5bd;
            font-style: italic;
        }
    </style>
</head>
<body>

<div class="container content-section">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Schedule Management</h1>
        <!-- 1. Add Schedule opens addScheduleModal -->
        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addScheduleModal">
            Add Course Schedule
        </button>
    </div>

    <div class="schedule-container">
        <div class="filter-section">
            <div class="row g-3">
                <div class="col-md-4">
                    <label for="programFilter" class="form-label">Course</label>
                    <select class="form-select" id="programFilter">
                        <option value="" hidden selected>Choose Course</option>
                        <option value="BSIT">IM</option>
                        <option value="BSCS">DSA</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="sectionFilter" class="form-label">Section</label>
                    <select class="form-select" id="sectionFilter">
                        <option value="">All Sections</option>
                        <option value="A">Section A</option>
                        <option value="B">Section B</option>
                        <option value="C">Section C</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-primary">
                    <tr>
                        <th>Schedule Code</th>
                        <th>Description</th>
                        <th>Professor</th>
                        <th>Block Section</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model == null || !Model.Any())
                    {
                        <tr>
                            <td colspan="8" class="text-center text-muted">No schedule found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var sched in Model)
                        {
                            <tr>
                                <td>@sched.Schd_Code</td>
                                <td>@sched.Schd_Description</td>
                                <td>TBA</td>
                                <td>@sched.Blk_Sec_Id</td>
                                <td class="action-buttons">
                                    <!-- 2. Edit button opens editScheduleModal -->
                                    <a href="#" class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editScheduleModal" data-id="@sched.Schd_Code">Edit</a>
                                    @Html.ActionLink("Delete", "DeleteCourse", "Admin", new { id = sched.Schd_Code }, new {
                                        @class = "btn btn-sm btn-danger",
                                        onclick = "return confirm('Are you sure you want to delete this course?');"
                                    })
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

    </div>
</div>

<!-- Add Schedule Modal -->
<div class="modal fade" id="addScheduleModal" tabindex="-1" aria-labelledby="addScheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addScheduleModalLabel">Add Schedule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="col-md-4">
                    <label for="programFilterAdd" class="form-label">Course</label>
                    <select class="form-select" id="programFilterAdd">
                        <option value="" hidden selected>Choose Course</option>
                        <option value="BSIT">IM</option>
                        <option value="BSCS">DSA</option>
                    </select>
                </div>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-primary">
                        <tr>
                            <th>Session Number</th>
                            <th>Day of Week</th>
                            <th>Start Time</th>
                            <th>End Time</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        @* sessions rows *@
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <!-- 3. Inside Add Schedule modal, Add Session opens addSessionModal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSessionModal">
                    Add Session
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Schedule Modal -->
<div class="modal fade" id="editScheduleModal" tabindex="-1" aria-labelledby="editScheduleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editScheduleModalLabel">Edit Schedule</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-primary">
                            <tr>
                                <th>Session Number</th>
                                <th>Day of Week</th>
                                <th>Start Time</th>
                                <th>End Time</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        @* sessions rows *@
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <!-- 4. Inside Edit Schedule modal, Add Session opens addSessionModal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSessionModal">
                    Add Session
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Add Session Modal -->
<div class="modal fade" id="addSessionModal" tabindex="-1" aria-labelledby="addSessionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSessionModalLabel">Add Session</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addSessionForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="sessionDay" class="form-label">Day of Week</label>
                            <select class="form-select" id="sessionDay">
                                <option>Monday</option>
                                <option>Tuesday</option>
                                <option>Wednesday</option>
                                <option>Thursday</option>
                                <option>Friday</option>
                                <option>Saturday</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="sessionStart" class="form-label">Start Time</label>
                            <input type="time" class="form-control" id="sessionStart" />
                        </div>
                        <div class="col-md-3">
                            <label for="sessionEnd" class="form-label">End Time</label>
                            <input type="time" class="form-control" id="sessionEnd" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <!-- 5. Inside any schedule modal session table, Edit opens editSessionModal -->
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#editSessionModal" data-bs-dismiss="modal">
                    Save Session
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Session Modal -->
<div class="modal fade" id="editSessionModal" tabindex="-1" aria-labelledby="editSessionModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editSessionModalLabel">Edit Session</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editSessionForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label for="editSessionDay" class="form-label">Day of Week</label>
                            <select class="form-select" id="editSessionDay">
                                <option>Monday</option>
                                <option>Tuesday</option>
                                <option>Wednesday</option>
                                <option>Thursday</option>
                                <option>Friday</option>
                                <option>Saturday</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label for="editSessionStart" class="form-label">Start Time</label>
                            <input type="time" class="form-control" id="editSessionStart" />
                        </div>
                        <div class="col-md-3">
                            <label for="editSessionEnd" class="form-label">End Time</label>
                            <input type="time" class="form-control" id="editSessionEnd" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="saveEditedSessionBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="~/Content/bootstrap.bundle.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // Highlight nav
        const currentPath = window.location.pathname;
        const currentPage = currentPath.substring(currentPath.lastIndexOf('/') + 1);
        const navLinks = document.querySelectorAll('#navbarNavProgramHead .nav-link');
        navLinks.forEach(link => {
            const linkHref = link.getAttribute('href');
            const linkPage = linkHref.substring(linkHref.lastIndexOf('/') + 1);
            if (linkPage.toLowerCase() === currentPage.toLowerCase()) {
                link.classList.add('active');
                link.setAttribute('aria-current', 'page');
            } else {
                link.classList.remove('active');
                link.removeAttribute('aria-current');
            }
        });
    });
</script>
</body>
</html>
