@{
Layout = "~/Views/Shared/_TeacherHeader.cshtml";
ViewBag.Title = "Teacher Dashboard - Enrollment System";
}

@section Styles {
<style>
    body {
        font-family: 'Inter', sans-serif;
        background-color: #f0f2f5;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }
    .content-section {
        padding: 30px;
        flex-grow: 1;
        margin-top: 56px; /* Adjust based on header height */
    }
    .info-card {
        background-color: #ffffff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        margin-bottom: 20px;
        text-align: center;
    }
    .info-card h4 {
        color: #007bff;
        margin-bottom: 15px;
    }
    .info-card p {
        font-size: 1.1em;
        color: #555;
    }
</style>
}

<div class="container content-section">
    <h1 class="mb-4">Teacher Dashboard</h1>
    <p class="lead">Welcome, Teacher! Here's a quick overview of your responsibilities.</p>

    <div class="row">
        <div class="col-md-4">
            <div class="info-card">
                <h4>Classes</h4>
                <p>Manage and view class list for assigned section.</p>
                <a href="@Url.Action("Classes", "Teacher")" class="btn btn-primary">View Classes</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="@Url.Content("~/Scripts/bootstrap.bundle.min.js")"></script>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        // No need to fetch header since it's rendered by Layout
        // Active link is already set in Layout using Razor
    });
</script>
}